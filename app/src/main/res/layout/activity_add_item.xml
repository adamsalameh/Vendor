<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="18sp" />

    <!-- ImageView for displaying selected image -->
    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="229dp"
        android:layout_height="176dp"
        android:layout_below="@id/textViewName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/buttonSelectFromGallery"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/editTextItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewItem"
        android:layout_marginTop="20dp"
        android:hint="Item Name"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextItemName"
        android:layout_marginTop="20dp"
        android:hint="Quantity"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextQuantity"
        android:layout_marginTop="20dp"
        android:hint="Price"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#664FA3"
        android:text="Add Item" />

    <Button
        android:id="@+id/buttonSelectFromGallery"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_above="@+id/editTextItemName"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/circle_background"
        android:drawableTop="@drawable/upload"
        android:text="" />
</RelativeLayout>
